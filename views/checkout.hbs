<main>
    <h1 class="text-center mb-4 text-danger">Checkout</h1>

    <!--this is my cart -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Your Order</h4>
        </div>
        <div class="card-body">
            <div id="checkout-items">
                <p>Your cart is empty.</p>
            </div>
            <hr>
            <h4 id="checkout-total" class="text-end fw-bold">Total: €0.00</h4>
        </div>
    </div>

    <!-- CUSTOMER DETAILS FORM -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white">
            <h4 class="mb-0">Delivery Details</h4>
        </div>
        <div class="card-body">
            <div id="checkout-form">
                <div class="mb-3">
                    <label class="form-label">Full Name</label>
                    <input type="text" name="fullname" class="form-control" placeholder="Enter your name" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone Number</label>
                    <input type="text" name="phone" class="form-control" placeholder="Your phone number" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Delivery Address</label>
                    <input type="text" name="address" class="form-control" placeholder="Street, City" required>
                </div>

                <!-- PAYMENT FIELDS -->
                <div class="mb-3">
                    <label class="form-label">Card Number</label>
                    <input type="text" id="cardNumber" class="form-control" placeholder="1234 5678 9102 3456" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">CVV</label>
                    <input type="text" id="cardCvv" class="form-control" placeholder="123" required>
                </div>

                <!-- Buttons -->
                <button type="button" id="buy-now" class="btn btn-danger w-100">Place Order</button>

                <p id="payment-success" style="color:green; display:none;">Payment Successful!</p>
                <p id="payment-failure" style="color:red; display:none;">Payment Failed!</p>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a href="/order" class="btn btn-secondary">← Back to Order Page</a>
    </div>

    <script src="/js/checkout.js"></script>
</main>


