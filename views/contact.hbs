

<main class="container my-5 d-flex flex-column align-items-center">

  <!-- Scroll to Bottom button -->
  <a href="#bottom" class="scroll-btn">Go to Bottom</a>

  <!-- Contact Form -->
  <form action="/submit" method="get" class="contact-form mt-3 w-100">
    <h2 class="text-center mb-2">Contact Us</h2>
    <p class="text-center mb-4">Have a question or feedback? Fill out the form below, and we'll get back to you soon!</p>

    <div class="mb-3">
      <label for="name" class="form-label">Name:</label>
      <input type="text" id="name" name="name" required placeholder="Enter your name" class="form-control">
    </div>

    <div class="mb-3 gender-options">
      <label class="form-label">Gender:</label><br>
      <input type="radio" id="male" name="gender" value="male" class="form-check-input">
      <label for="male" class="form-check-label">Male</label>

      <input type="radio" id="female" name="gender" value="female" class="form-check-input ms-3">
      <label for="female" class="form-check-label">Female</label>

      <input type="radio" id="other" name="gender" value="other" checked class="form-check-input ms-3">
      <label for="other" class="form-check-label">Other</label>
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email:</label>
      <input type="email" id="email" name="email" required placeholder="Enter your email" class="form-control">
    </div>

    <div class="mb-3">
      <label for="message" class="form-label">Your Message:</label>
      <textarea id="message" name="message" rows="5" placeholder="Write your message (max 200 characters)" maxlength="200" class="form-control"></textarea>
    </div>

    <div class="d-flex justify-content-between">
      <input class="btn btn-primary" type="submit" value="Submit">
      <input class="btn btn-secondary" type="reset" value="Reset">
    </div>
  </form>

  <!-- Opening Hours Table -->
  <table class="table hours-table mt-5 w-100">
    <thead class="table-dark">
      <tr>
        <th>Day</th>
        <th>Pickup</th>
        <th>Delivery</th>
      </tr>
    </thead>
    <tbody>
      <tr><td>Monday</td><td>16:00 - 22:00</td><td>16:00 - 22:00</td></tr>
      <tr><td>Tuesday</td><td colspan="2">Closed</td></tr>
      <tr><td>Wednesday</td><td>16:00 - 23:00</td><td>16:00 - 23:00</td></tr>
      <tr><td>Thursday</td><td>16:00 - 23:00</td><td>16:00 - 23:00</td></tr>
      <tr><td>Friday</td><td>16:00 - 23:00</td><td>16:00 - 23:00</td></tr>
      <tr><td>Saturday</td><td>16:00 - 23:00</td><td>16:00 - 23:00</td></tr>
      <tr><td>Sunday</td><td>16:00 - 23:00</td><td>16:00 - 23:00</td></tr>
    </tbody>
  </table>

  <!-- Contact Details -->
  <section class="contact-details mt-4 w-100 text-center">
    <h2>Find Us</h2>
    <p><strong>Address:</strong> Emmett St, Tobercurry, Co. Sligo, F91 YW11, Ireland</p>
    <p><strong>Call us:</strong> <a href="tel:0719120788">071 912 0788</a></p>
  </section>

  <!-- Map -->
  <section class="map mt-4 w-100">
    <h2 class="text-center">Our Location</h2>
    <iframe 
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2382.983468562095!2d-8.73881432323652!3d54.04562722280286!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x485e39f3b136da1f%3A0x1cf951d6f8607a9b!2sValentino&#39;s%20Takeaway!5e0!3m2!1sen!2sie!4v1711200000000!5m2!1sen!2sie" 
      width="100%" height="400" style="border:0;" allowfullscreen loading="lazy" class="rounded">
    </iframe>
  </section>

  <!-- Scrll to Top -->
  <div id="bottom" class="mt-5">
      <a href="#top" class="scroll-btn to-top-btn">Go to Top</a>
  </div>

</main>
</body>
</html>
