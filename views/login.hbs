<body>
<h1>Login</h1>

<form id="user-login">
    <div>
        <label for="emailAddressID">Email</label>
        <input
            type="email"
            id="emailAddressID"
            name="email"
            placeholder="example@email.com"
            pattern="^[^@\s]+@[^@\s]+\.[^@\s]+$"
            required>
    </div>

    <div>
        <label for="passwordID">Password</label>
        <input
            type="password"
            id="passwordID"
            name="password"
            placeholder="At least 6 characters"
            pattern=".{6,}"
            required>
    </div>

    <button type="submit">Login</button>
</form>

<p>
    Don't have an account? <a href="/register">Register</a>
</p>


<script src="/js/login.js"></script>
</body>





