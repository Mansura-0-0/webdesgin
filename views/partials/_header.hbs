<header class="site-header">
  <div class="container header-container">
    <!-- Logo -->
    <div class="header-left">
      <img class="logo" src="/images/logo.JPG" alt="Valentino's Logo" />
    </div>

    <!-- Title -->
    <div class="header-center">
      <h1>
        <span class="val">VAL</span><span class="ent">ENT</span><span class="inos">INO'S</span>
        <span class="takeaway"> Takeaway</span>
      </h1>
    </div>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
      <button
        class="navbar-toggler"
        type="button"
        data-bs-toggle="collapse"
        data-bs-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link {{#if state.home}}active{{/if}}" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{#if state.menu}}active{{/if}}" href="/menu">Menu</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{#if state.order}}active{{/if}}" href="/order">Order</a>
          </li>
          <li class="nav-item">
            <a class="nav-link {{#if state.contact}}active{{/if}}" href="/contact">Contact</a>

          </li>
          <li class="nav-item">
            <a class="nav-link {{#if state.login}}active{{/if}}" href="/login" onclick="localStorage.setItem('redirectAfterLogin', 'order')">Log in</a>

          </li>

        </ul>
      </div>
    </nav>
  </div>
</header>
